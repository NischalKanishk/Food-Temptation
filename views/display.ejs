<!DOCTYPE html>
    <html>
    
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <title>Recipes</title>
        <link rel="stylesheet" href="assetsM/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="assetsM/fonts/fontawesome-all.min.css">
        <link rel="stylesheet" href="assetsM/fonts/font-awesome.min.css">
        <link rel="stylesheet" href="assetsM/fonts/fontawesome5-overrides.min.css">
        <link rel="stylesheet" href="assetsM/css/-Filterable-Cards-.css">
        <link rel="stylesheet" href="assetsM/css/Dark-NavBar-1.css">
        <link rel="stylesheet" href="assetsM/css/Dark-NavBar-2.css">
        <link rel="stylesheet" href="assetsM/css/Dark-NavBar.css">
        <link rel="stylesheet" href="assetsM/css/Projects-Horizontal.css">
        <link rel="stylesheet" href="assetsM/css/styles.css">
    </head>
    
    <body>
        <div>
            <nav class="navbar navbar-light navbar-expand-md sticky-top navigation-clean-button" style="height:80px;background-color:#37434d;color:#ffffff;">
                <div class="container-fluid"><a class="navbar-brand" href="/"><i class="fas fa-hamburger"></i>Food Temptation</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                    <div
                        class="collapse navbar-collapse" id="navcol-1">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active"><a class="nav-link" style="color:#ffffff;" href="/"><i class="fa fa-home"></i>Home<span class="sr-only">(current)</span></a></li>
                            <li class="nav-item active"><a class="nav-link" style="color:#ffffff;" href="/recipes/new"><i class="fa fa-plus"></i>Add Your Recipe<span class="sr-only">(current)</span></a></li>
                            <li class="nav-item active"><a class="nav-link" style="color:#ffffff;" href="/about"><i class="fa fa-user-circle-o"></i>Portfolio<span class="sr-only">(current)</span></a></li>
                            
                        </ul>
                </div>
        </div>
        </nav>
        </div>
        <section class="py-5">
            <div class="container">
                <h1 class="text-center mb-4">Recipes</h1>
                <div class="filtr-controls text-center lead text-uppercase mb-3"></div>
                <div class="row filtr-container">
                    <% recipes.forEach(function(recipe){ %>
                    <div class="col-md-6 col-lg-4 filtr-item" data-category="2,3">
                        <div class="card border-dark">
                            <div class="card-header bg-dark text-light">
                                <h5 class="m-0"><%= recipe.recipeName %></h5>
                            </div><img class="img-fluid card-img w-100 d-block rounded-0" src="<%=recipe.recipeImage %>">
                            <div class="card-body">
                                <% for(var i=0; i<recipe.recipeDesc.length ;i++) { %>
                                <p class="card-text"><%= recipe.recipeDesc[i].substring(0,150) %>..</p>
                                <% } %>
                            </div>
                            <div class="d-flex card-footer"><a href="/recipes/<%=recipe._id %>" class="btn btn-dark btn-sm" type="button"><i class="fa fa-arrow-right"></i>&nbsp;Read More</a></div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </section>
        <script src="assetsM/js/jquery.min.js"></script>
        <script src="assetsM/bootstrap/js/bootstrap.min.js"></script>
        <script src="assetsM/js/-Filterable-Cards-.js"></script>
    </body>
    
    </html>